<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryDark">@color/primaryBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="CustomInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/input_stroke_color</item>
    </style>
    <style name="GenderButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/gender_button_background</item>
        <item name="strokeColor">@color/gender_button_stroke</item>
        <item name="android:textColor">@color/gender_button_text</item>
        <item name="rippleColor">@color/sugarBlue</item>
    </style>
    <style name="plusMinusButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/plus_minus_button_login</item>
        <item name="android:textColor">@color/primaryBlack</item>
        <item name="rippleColor">@color/lighterBlack</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:elevation">0dp</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>
    <style name="mainButtons" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryBlue</item>
        <item name="android:fadingEdge">none</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primaryWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="cornerRadius">20dp</item>
        <item name="rippleColor">@color/sugarBlue</item>
        <item name="android:layout_height">60dp</item>
    </style>
    <style name="mainScreenButtons" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="mainScreenPlusMinusShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">6dp</item>
        <item name="cornerSizeTopRight">6dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="water_4_250">

        <item name="android:textSize">
            16dp
        </item>

        <item name="android:textColor">
            #FBFBFB
        </item>

    </style>
    <style name="carouselCircles" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:text"></item>
        <item name="cornerRadius">20dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="backgroundTint">@color/carouselCirclesNotActive</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

</resources>